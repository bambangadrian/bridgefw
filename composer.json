            "src/function.inc.php",
            "src/application/devosa/devosa.php"
        ],
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "require"          : {
        "php"                    : "~5.6.16",
        "monolog/monolog"        : "~1.18.1",
        "swiftmailer/swiftmailer": "~5.4.1",
        "phpoffice/phpexcel"     : "~1.8.1",
        "doctrine/orm"           : "v2.5.4",
        "doctrine/dbal"          : "~2.5.4"
    },
    "require-dev"      : {
        "squizlabs/php_codesniffer": "2.5.1",
        "phpmd/phpmd"              : "2.4.2"
