    "minimum-stability": "stable",
    "prefer-stable"    : true,
    "license"          : "proprietary",
    "version"          : "1.0.0",
    "support"          : {
        "issues": "http://192.168.1.254/redmine/projects/old-devosa/issues",
        "source": "http://192.168.1.254:8000/devosa/old-devosa/tree/master"
    },
    "repositories"     : [
        {
            "type": "vcs",
            "url" : "http://192.168.1.254:8000/devosa/old-devosa.git"
        }
    ],
    "authors"          : [
        {
            "name" : "Bambang Adrian Sitompul",
            "email": "bambang@invosa.com",
            "role" : "Developer"
        },
        {
            "name" : "Ade Sanusi",
            "email": "ade@invosa.com",
            "role" : "Developer"
        },
        {
            "name" : "Prasetyo Restu",
            "email": "prasetyo@invosa.com",
            "role" : "Developer"
        },
        {
            "name" : "Lisman Sihotang",
            "email": "lisman@invosa.com",
            "role" : "Developer"
        }
    ],
    "autoload"         : {
        "psr-4"                : {
            "Bridge\\": "src/system/"
